<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".ui.view.ProfileSettingsFragment">

    <!--Email Input View-->
    <LinearLayout
        android:id="@+id/name"
        style="@style/LinearLayoutEditText">

        <ImageView
            android:id="@+id/image_name"
            style="@style/ImageStyle"
            android:contentDescription="Name Icon"
            app:srcCompat="@drawable/ic_user" />

        <TextView
            android:id="@+id/userName"
            style="@style/EditText"
            tools:text="Florence Njeri" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/black" />

    <LinearLayout style="@style/LinearLayoutEditText">

        <TextView
            android:id="@+id/consumptionGoal"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:text="Daily water consumption goal:" />

        <TextView
            android:id="@+id/goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="3000ml" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/black" />

    <LinearLayout style="@style/LinearLayoutEditText">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin"
            android:src="@drawable/ic_drink" />

        <TextView
            android:id="@+id/glassMeasurements"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:text="Size of Glass:" />

        <TextView
            android:id="@+id/glassSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="3000ml" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/black" />

    <LinearLayout style="@style/LinearLayoutEditText">

        <TextView
            android:id="@+id/textView3"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sleep Shedule" />

        <TextView
            android:id="@+id/sleepingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin"
            tools:text="21:00 PM" />

        <TextView
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="to" />

        <TextView
            android:id="@+id/wakeUpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="4:00 AM" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/gender"
        style="@style/LinearLayoutEditText">

        <TextView
            android:id="@+id/textView4"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gender" />

        <LinearLayout
            android:id="@+id/time_button_container"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/name_view_rounded_corners"
            android:orientation="horizontal"
            android:padding="0.5dp">

            <Button
                android:id="@+id/maleButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="@string/male"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text" />

            <Button
                android:id="@+id/femaleButtonSettings"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="@string/female"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/weightLayout"
        style="@style/LinearLayoutEditText">

        <TextView
            android:id="@+id/textView5"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:text="Weight:" />


        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="53 kgs" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/heightLayout"
        style="@style/LinearLayoutEditText">

        <TextView
            android:id="@+id/textView6"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:text="Height:" />


        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="167 cm" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/unitsOfMeasurement"
        style="@style/LinearLayoutEditText">

        <TextView
            android:id="@+id/textView7"
            style="@style/TextStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Units of Measurement:" />

        <LinearLayout
            android:id="@+id/measurements_button_container"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/name_view_rounded_corners"
            android:orientation="horizontal"
            android:padding="0.5dp">

            <Button
                android:id="@+id/kgsUnits"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="Kgs | Ml"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text" />

            <Button
                android:id="@+id/poundsUnitsSettings"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:text="Lbs | oz"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>